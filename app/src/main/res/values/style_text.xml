<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style
        name="text">
        <item name="android:fontFamily" >@font/montserrat</item>
        <item name="android:textSize" >16sp</item>
    </style>
    <style
        name="text_bold">
        <item name="android:fontFamily" >@font/montserrat_bold</item>
        <item name="android:textSize" >16sp</item>
    </style>
    <style
        name="text_bold_extra" parent="text_bold">
        <item name="android:textSize" >20sp</item>
        <item name="android:textAllCaps" >true</item>
    </style>
    <style
        name="text_title">
        <item name="android:fontFamily" >@font/montserrat_bold</item>
        <item name="android:textSize" >36sp</item>
        <item name="android:textAlignment" >gravity</item>
    </style>
    <style
        name="text_title_small" parent="text_title">
        <item name="android:textSize" >24sp</item>
    </style>
    <style
        name="text_title_extra" parent="text_title">
        <item name="android:fontFamily" >@font/montserrat_extrabold</item>
        <item name="android:textSize" >40sp</item>
    </style>
    <style
        name="text_button">
        <item name="android:fontFamily" >@font/montserrat_medium</item>
        <item name="android:textSize" >16sp</item>
        <item name="android:textAllCaps" >true</item>
    </style>
    <style
        name="text_large_button" parent="text_button">
        <item name="android:textSize" >40sp</item>
    </style>
    <style
        name="text_description" >
        <item name="android:fontFamily" >@font/montserrat_light</item>
        <item name="android:textSize" >16sp</item>
        <item name="autoSizeMinTextSize" >12dp</item>
        <item name="android:textAlignment" >gravity</item>
    </style>
    <style
        name="text_description_small" >
        <item name="android:textSize" >12sp</item>
        <item name="autoSizeMinTextSize" >8dp</item>
    </style>
    <style
        name="text_description_extra" parent="text_description" >
        <item name="android:fontFamily" >@font/montserrat_medium</item>
        <item name="android:textSize" >16sp</item>
    </style>
    <style
        name="text_description_pop" parent="text_description" >
        <item name="android:fontFamily" >@font/montserrat_medium</item>
        <item name="android:textSize" >18sp</item>
    </style>
    <style
        name="text_edit">
        <item name="android:textAppearance" >@style/text_description</item>
        <item name="android:textColorHint" >?attr/colorOnSurfaceVariant</item>
        <item name="android:backgroundTint" >?attr/colorTertiary</item>
        <item name="android:textCursorDrawable" >@drawable/text_cursor_tertiary</item>
        <item name="android:textColorHighlight" >?attr/colorTertiaryContainer</item>
    </style>
</resources>