<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/digit_hour"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="6sp"
        app:layout_constraintEnd_toStartOf="@id/digit_minute_0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/digit_minute_0"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="1sp"
        app:layout_constraintEnd_toStartOf="@id/digit_minute_1"
        app:layout_constraintStart_toEndOf="@id/digit_hour"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/digit_minute_1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="6sp"
        app:layout_constraintEnd_toStartOf="@id/digit_second_0"
        app:layout_constraintStart_toEndOf="@id/digit_minute_0"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/digit_second_0"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="1sp"
        app:layout_constraintEnd_toStartOf="@id/digit_second_1"
        app:layout_constraintStart_toEndOf="@id/digit_minute_1"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/digit_second_1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintStart_toEndOf="@id/digit_second_0"
        app:layout_constraintTop_toTopOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>