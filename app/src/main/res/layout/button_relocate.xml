<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/relocate_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleX="0.6"
        android:scaleY="0.6"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/circle_shape"
        app:tint="?attr/colorPrimary" />

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:clickable="false"
        android:focusable="false"
        app:layout_constraintBottom_toBottomOf="@id/relocate_button"
        app:layout_constraintEnd_toEndOf="@id/relocate_button"
        app:layout_constraintStart_toStartOf="@id/relocate_button"
        app:layout_constraintTop_toTopOf="@id/relocate_button"
        app:srcCompat="@drawable/icon_add_location"
        app:tint="?attr/colorOnPrimary" />
</androidx.constraintlayout.widget.ConstraintLayout>