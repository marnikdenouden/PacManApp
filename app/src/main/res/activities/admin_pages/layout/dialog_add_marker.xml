<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.map.AdminMapActivity">

    <Button
        android:id="@+id/add_pacdot"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:textAppearance="@style/text"
        android:textColor="?attr/colorOnPrimaryContainer"
        android:backgroundTint="?attr/colorPrimaryContainer"
        android:onClick="selectPacDot"
        android:text="Pac-Dot"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/add_power_pellet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/add_power_pellet"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:textAppearance="@style/text"
        android:textColor="?attr/colorOnPrimaryContainer"
        android:backgroundTint="?attr/colorPrimaryContainer"
        android:onClick="selectPowerPellet"
        android:text="Power Pellet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/add_pacdot"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>